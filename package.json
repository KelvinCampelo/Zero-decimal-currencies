{
  "name": "zero-decimal-currencies",
  "version": "1.1.2",
  "description": "Get the smallest currency unit even it is a Zero Decimal Currency",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "keywords": [
    "zero-decimal",
    "currencies",
    "zero",
    "decimal",
    "currency",
    "stripe",
    "parse"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/KelvinCampelo/zero-decimal-currencies"
  },
  "scripts": {
    "build": "babel -d ./ ./src",
    "check": "npm outdated --depth 0",
    "coverage": "nyc --reporter=lcov --reporter=text --reporter=html npm test",
    "coveralls": "npm run coverage && cat ./coverage/lcov.info | coveralls && rm -rf ./coverage",
    "lint": "eslint src test",
    "test": "ava --require babel-core/register",
    "validate": "npm run lint && npm test",
    "prepare": "npm run build && npm run validate",
    "pp": "npm run prepare",
    "major": "pmm major",
    "minor": "pmm minor",
    "patch": "pmm patch"
  },
  "author": {
    "name": "Kelvin Campelo",
    "email": "kelvsousa@gmail.com",
    "url": "https://github.com/KelvinCampelo"
  },
  "pre-commit": [
    "validate"
  ],
  "devDependencies": {
    "ava": "^2.4.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.5.2",
    "babel-eslint": "^10.0.3",
    "babel-plugin-transform-function-bind": "^6.5.2",
    "babel-preset-env": "^1.7.0",
    "coveralls": "^3.0.7",
    "cz-conventional-changelog": "^3.0.2",
    "escope": "^3.6.0",
    "eslint": "^6.5.1",
    "nyc": "^14.1.1",
    "pmm": "^2.0.0",
    "pre-commit": "^1.1.2"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
